<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/rus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ukr"
        android:text="россия"
        android:onClick="getRU"
        android:fontFamily="@font/rubik"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/russia"/>
    <Button
        android:id="@+id/ukr"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rus"
        app:layout_constraintRight_toLeftOf="@id/eng"
        android:text="украина"
        android:onClick="getUK"
        android:fontFamily="@font/rubik"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/ukraine"/>

    <Button
        android:id="@+id/eng"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ukr"
        app:layout_constraintRight_toRightOf="parent"
        android:text="запад"
        android:fontFamily="@font/rubik"
        android:textSize="11sp"
        android:textStyle="bold"
        android:onClick="getEN"
        android:textColor="@color/white"
        android:background="@drawable/engish"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/recyclerview_item"
        app:layout_constraintBottom_toTopOf="@id/to_comparison"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rus"
        android:scrollbars="vertical"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/to_comparison"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rus"
        android:text="Выберите язык новостей\nи попробуйте сравнить\nдве интересующие статьи"
        android:gravity="center"
        android:fontFamily="@font/rubik"
        android:textSize="24sp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/to_comparison"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@+id/to_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/own_comparison"
        android:text="сравнить\nвыбранные"
        android:fontFamily="@font/rubik"
        android:paddingVertical="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/non_working_comparison"/>
    <Button
        android:id="@+id/own_comparison"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@+id/to_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/to_comparison"
        android:text="сравнить свои источники"
        android:fontFamily="@font/rubik"
        android:paddingVertical="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/working_comparison"/>
    <Button
        android:id="@+id/to_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main"
        android:text="иноагенты"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableStart="@drawable/worldwide_bw"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/to_list"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Новости"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/newspaper"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:background="@color/light_gray_tint" />

</androidx.constraintlayout.widget.ConstraintLayout>