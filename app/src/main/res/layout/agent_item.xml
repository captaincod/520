<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lightblue_back"
    android:rowCount="4"
    android:columnCount="3"
    android:padding="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/agent_name"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="4"
        android:layout_width="130dp"
        android:layout_height="145dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="Фамилия\nИмя\nОтчество"
        android:fontFamily="@font/rubik"
        android:textColor="@color/red"
        android:textSize="16sp"/>
    <TextView
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="Дата включения:"
        android:fontFamily="@font/rubik"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/agent_date"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="01.01.1001"
        android:fontFamily="@font/rubik"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"/>
    <TextView
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="Источники:"
        android:fontFamily="@font/rubik"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/sources"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:text="Сведения об иностранных источниках"
        android:fontFamily="@font/rubik"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/info"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp"
        android:text="Информация о полит. деятельности"
        android:fontFamily="@font/rubik_italic"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"/>

</GridLayout>