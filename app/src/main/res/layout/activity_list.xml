<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".activities.ListActivity">

    <TextView
        android:id="@+id/ru_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Россия"
        android:gravity="start"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubik"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/ru_text"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/get_ru_agents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/ru_text"
        android:text="Список\nфизлиц-иноагентов"
        android:gravity="start"
        android:padding="20dp"
        android:fontFamily="@font/rubik"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_individuals"
        android:drawableEnd="@drawable/russia_square"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/get_ru_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/get_ru_agents"
        android:text="Реестр\nСМИ-иноагентов"
        android:gravity="start"
        android:padding="20dp"
        android:fontFamily="@font/rubik"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_media"
        android:drawableEnd="@drawable/russia_square"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/ua_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/get_ru_media"
        android:text="Украина"
        android:gravity="start"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubik"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/ua_text"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/get_ua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/ua_text"
        android:text="Лица, угрожающие\nнациональной безопасности"
        android:gravity="start"
        android:padding="20dp"
        android:fontFamily="@font/rubik"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_individuals"
        android:drawableEnd="@drawable/ukraine_square"
        android:textAllCaps="false"/>

    <!--<Button
        android:id="@+id/to_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/to_list"
        android:text="лучший ресурс про бренды"
        />
        -->

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/to_list"
        android:layout_marginVertical="30dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/to_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main"
        android:text="иноагенты"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableStart="@drawable/worldwide"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@color/light_gray_tint"/>
    <Button
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/to_list"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Новости"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/newspaper_bw"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>