<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".activities.ListActivity">

    <Button
        android:id="@+id/get_individuals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Список\nфизлиц-иноагентов"
        android:gravity="start"
        android:padding="20dp"
        android:fontFamily="@font/rubik"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_individuals"
        android:drawableEnd="@drawable/worldwide"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/names_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/to_list"
        app:layout_constraintTop_toBottomOf="@id/get_individuals" />

    <!--<Button
        android:id="@+id/to_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/to_list"
        android:text="лучший ресурс про бренды"
        />
        -->

    <Button
        android:id="@+id/to_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main"
        android:text="иноагенты"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableStart="@drawable/worldwide"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@color/dark_gray"/>
    <Button
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/to_list"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Новости"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/newspaper_bw"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>